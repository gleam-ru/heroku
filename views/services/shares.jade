extends ../layouts/default.jade

block postHead
  script(src='/PageControllers/shares.js' defer)
  
  //- candles
  style.
    path.candle {
      }
      path.candle.body {
        shape-rendering: crispEdges;
        stroke-width: 0;
        }
      path.candle.up {
        fill: #6BA484;
        stroke: #000;
        }
      path.candle.down {
        fill: #D7523F;
        stroke: #000;
        }
  //- ohlc
    style.
    path.ohlc {
      shape-rendering: crispEdges;
      stroke: #000000;
      stroke-width: 1;
      }
      path.ohlc.up {
        stroke: #00AA00;
        }
      path.ohlc.down {
        stroke: #FF0000;
        }

  //- volumes
  style.
    path.volume {
      fill: #EEEEEE;
      }
  
  //- brusher
  style.
    path.line {
      fill: none;
      stroke: rgba(0,0,0, 0.5);
      stroke-width: 1;
      }
    .extent {
      shape-rendering: crispEdges;
      stroke: #bbb;
      fill: rgba(0,0,0, 0.1);
      }


  style.
    .axis text {
      font: 11px sans-serif;
      }
    .rect {
      fill: none;
      stroke: #bbb;
      stroke-width: 1;
      shape-rendering: crispEdges;
      }
    .focus .tick line {
      stroke: #dedede;
      stroke-dasharray: 1;
      }
    .axis path,
    .axis line {
      fill: none;
      stroke: #bbb;
      shape-rendering: crispEdges;
      }





