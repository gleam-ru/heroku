extends ../../layouts/default.jade

block postHead
  link(rel='stylesheet', href='/css/sharesTickerPlot.css')
  script(src="/bower_components/d3/d3.js" defer)
  script(src="/bower_components/techan/dist/techan.js" defer)
  +PasteInlineData([
    'ticker', ticker
  ])

  script(src='/PageControllers/sharesTicker.js' defer)

  style.
    .roundIcon {
      font-size: initial;
      margin-left: 5px;
      text-align: center;
      }
    #shares {min-height: 300px;}





block pageHead
  h1 #{ticker.general.name || ticker.general.ticker}
    if (user && user.access === 'admin')
      a.tt(
        href='/services/shares/'+ticker.id+'/edit',
        )
        +roundIcon('fa-paw')
    if (ticker.general.site)
      a.tt(
        href='/'
        target='_blank'
        title='Официальный сайт'
        )
        +roundIcon('fa-external-link')
    if (tickerForums && tickerForums.length)
      - var forumsList = ''
      - forumsList += '<ul>'
      - tickerForums.forEach(function(f) {forumsList += '<li><a target="_blank" href="'+f.href+'">'+f.name+'</a></li>'})
      - forumsList += '</ul>'
      span.tt.tt_interactive.tt_html.cur-p(
        title='<p>Популярные форумы:</p>#{forumsList}'
        )
        +roundIcon('fa-comments')
    if (tickerLinks && tickerLinks.length)
      - var linksList = ''
      - linksList += '<ul>'
      - tickerLinks.forEach(function(l) {linksList += '<li><a target="_blank" href="'+l.href+'">'+l.name+'</a></li>'})
      - linksList += '</ul>'
      span.tt.tt_interactive.tt_html.cur-p(
        title='<p>Полезные ссылки:</p>#{linksList}'
        )
        +roundIcon('fa-paperclip')
    if (1)
      a.tt(
        href='/'
        title='Добавить в портфель'
        )
        +roundIcon('fa-plus')
block pageHead_small
block breadcrumbs
  +breadcrumbs([
      {name:'Главная', href:'/'},
      {name:'Сервисы', href:'/services'},
      {name:'Акции', href:'/services/shares'},
      {name:(ticker.general.name || ticker.general.ticker)}
    ])

block content
  #shares
