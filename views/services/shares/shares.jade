extends ../../layouts/default.jade

block postHead
  +PasteInlineData(['shares', shares])
  script(src='/PageControllers/shares.js' defer)

  link(rel="stylesheet", href="/css/MyTable.css")
  style.
    .my-table {
      width: 100% !important;
      }
      .my-table td {
        line-height: 30px;
        }
    .my-table .inTableIcon {
      margin-right: 5px;
      }    
      .my-table .roundIcon {
        font-size: 14px;
        }
    .my-table .paging_simple_numbers .paginate_button {
      cursor: pointer;
      color: #333 !important;
      border: 1px solid transparent;
      color: #fff !important;
      background: none !important;
      background-color: #2c3e50 !important;
      box-shadow: 0 -2px 0 rgba(0,0,0,0.15) inset;
      font-size: 12px;
      font-weight: 700;
      text-transform: uppercase;
      border: none !important;
      border-radius: 3px;
      padding: 4px 12px;
      transition: all 0.25s ease;
      }
    #shares .my-table .paging_simple_numbers {
      margin-top: 10px;
      }
    #shares .my-table .paging_simple_numbers .paginate_button {
      opacity: 0.6;
      }
    #shares .my-table .paging_simple_numbers .current {
      opacity: 1;
      color: #fff !important;
      }
    #shares .my-table .paging_simple_numbers .previous {
      margin-right: 5px;
      }
    #shares .my-table .paging_simple_numbers .previous,
    #shares .my-table .paging_simple_numbers .next {
      opacity: 1;
      }





block pageHead
  h1 #{title}
block pageHead_small
  | Тут приведен список всех акций в системе
block breadcrumbs
  +breadcrumbs([
      {name:'Главная', href:'/'},
      {name:'Сервисы', href:'/services'},
      {name:title}
    ])

block content
  #shares
    .my-table
      .table 
        table#table
