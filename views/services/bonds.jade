block breadcrumbs
  +breadcrumbs([
      {name:'Главная', href:'/'},
      {name:'Сервисы', href:'/services'},
      {name:'Облигации'}
    ])

block content
  .height-transition.no-select
    div#bonds
      #bonds-table
