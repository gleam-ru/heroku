mixin Navigation(list)
  if list
    nav.w-nav
      .w-nav-h
        .w-nav-control
          i.fa.fa-bars
        .w-nav-list.layout_hor.width_auto.float_right.level_1
          .w-nav-list-h
            //- -------
            //- level 1
            //- -------
            each menuPosition in list
              if (!menuPosition.canSee || hasRoles(menuPosition.canSee))
                .w-nav-item.level_1.with_sublevel
                  .w-nav-item-h
                    - var href = menuPosition.href ? menuPosition.href : '/'
                    a(href=href, class="w-nav-anchor level_1")
                      span.w-nav-icon
                        i.fa.fa-star
                      span.w-nav-title
                        |#{menuPosition.name}
                      span.w-nav-hint
                    //- -------
                    //- level 2
                    //- -------
                    if menuPosition.children
                      .w-nav-list.place_down.show_onhover.level_2
                        .w-nav-list-h
                          each child in menuPosition.children
                            if (!child.canSee || hasRoles(child.canSee))
                              .w-nav-item.level_2
                                .w-nav-item-h
                                  - var href = child.href ? child.href : '/'
                                  a(href=href class="w-nav-anchor level_2")
                                    span.w-nav-title
                                      |#{child.name}
                                    span.w-nav-hint
